<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobChat" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mob_blue</item>
        <item name="colorPrimaryVariant">@color/mob_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mob_gray</item>
        <item name="colorSecondaryVariant">@color/mob_dark_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--  <item name="materialButtonStyle">@style/Theme.MobChat.NormalButton</item>
        <item name="borderlessButtonStyle">@style/Theme.MobChat.TextButton</item> -->
    </style>

    <style name="Theme.MobChat.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mob_blue</item>
        <item name="colorPrimaryVariant">@color/mob_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mob_gray</item>
        <item name="colorSecondaryVariant">@color/mob_dark_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Close button style -->
    <style name="Theme.MobChat.TextButton.IconOnly"
        parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="Theme.MobChat.NormalButton" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/Widget.MaterialComponents.Button</item>
        <item name="android:backgroundTint">@color/mob_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.MobChat.FormEditText"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

</resources>